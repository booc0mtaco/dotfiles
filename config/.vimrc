syntax on

set number
set nowrap
set showbreak=+++
set textwidth=100
set showmatch
set errorbells
set visualbell
 
set smartcase
set ignorecase
set incsearch
set wrapscan

set autoindent
set cindent
set expandtab
set shiftwidth=4
set smartindent
set smarttab
set softtabstop=4
 
set ruler
 
set undolevels=1000
set backspace=indent,eol,start

set dir=~/.cache/vim

set title 

set mouse=a 
